<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <com.example.fanp.utils.Shabnamlight
            android:id="@+id/btnTagManagement"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center|center_vertical"
            android:background="@drawable/transparent_yellow_border"
            android:padding="12dp"
            android:text="مدیریت تک" />

        <com.example.fanp.utils.Shabnamlight
            android:id="@+id/txtBrokerPort"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center|center_vertical"
            android:padding="12dp"
            android:text="پورت" />

        <com.example.fanp.utils.Shabnamlight
            android:id="@+id/txtBrokerAddress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center|center_vertical"
            android:padding="12dp"
            android:text="ادرس" />

        <com.example.fanp.utils.Shabnamlight
            android:id="@+id/txtBrokersName"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:gravity="center|center_vertical"
            android:padding="12dp"
            android:text="نام بروکر" />


    </LinearLayout>



</RelativeLayout>