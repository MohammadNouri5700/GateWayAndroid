<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/main_back">


    <include android:id="@+id/in" layout="@layout/header" />


    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:paddingTop="120dp"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/setting_button_protocol_layout"
            android:layout_width="250dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/setting_button_protocol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:src="@drawable/protocolmanage" />

            <com.example.fanp.utils.Shabnamlight
                android:id="@+id/setting_button_port_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/manageprotocol"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_button_protocol_layout2"
            android:layout_width="250dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/setting_button_protocol2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:src="@drawable/usermanage" />

            <com.example.fanp.utils.Shabnamlight
                android:id="@+id/setting_button_port_text2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/usermanagement"
                android:textColor="@color/white"
               />
        </RelativeLayout>


    </LinearLayout>




    </ScrollView>

</RelativeLayout>