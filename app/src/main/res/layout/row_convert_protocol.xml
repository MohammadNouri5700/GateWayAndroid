<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:background="@drawable/yellowborder"
    android:layout_height="wrap_content">

    <Spinner
        android:id="@+id/sptar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp" />

    <com.example.fanp.utils.Shabnammid
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/convertto"
        app:layout_constraintTop_toBottomOf="@+id/sptar"
        tools:layout_editor_absoluteX="-35dp" />

    <ImageView
        android:id="@+id/convertericon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="464dp"
        android:layout_marginBottom="144dp"
        android:src="@drawable/converter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/spdest"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="30dp" />

    <com.example.fanp.utils.Shabnammid
        android:id="@+id/txtdelete"
        android:layout_width="190dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:background="@drawable/yellowborder"
        android:gravity="center"
        android:padding="12dp"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.049"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spdest"
        app:layout_constraintVertical_bias="0.489" />


</androidx.constraintlayout.widget.ConstraintLayout>